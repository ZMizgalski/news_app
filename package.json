{
	"name": "news_app",
	"version": "1.0.0",
	"main": "app.js",
	"license": "MIT",
	"scripts": {
		"start-prev": "cross-env STAGE=local node dist/app.js",
		"start-prod-compiled": "cross-env STAGE=production PORT=80 node dist/app.js",
		"start-dev": "ts-node backend/app.ts",
		"build-b": "tsc -p tsconfig.json",
		"start-f": "concurrently \"cd frontend && yarn start\"",
		"build-f": "concurrently \"cd frontend && yarn build\"",
		"copy-ssl": "copyfiles -u 1 ./backend/ssl/**/* ./dist",
		"build": "concurrently \"yarn build-b && yarn build-f && yarn copy-ssl\"",
		"create-ssl": "openssl genrsa -out backend/ssl/key.pem 2048 && openssl req -new -x509 -key backend/ssl/key.pem -out backend/ssl/ssl.crt -config backend/ssl/localhost.cnf && openssl req -new -out backend/ssl/ssl.csr -config backend/ssl/localhost.cnf && openssl x509 -req -in backend/ssl/ssl.csr -CA backend/ssl/ssl.crt -CAkey backend/ssl/key.pem -CAcreateserial -out backend/ssl/ca.crt"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.2",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/greenlock-express": "^4.0.3",
		"@types/jsonwebtoken": "^9.0.5",
		"@types/lodash.merge": "^4.6.9",
		"@types/morgan": "^1.9.9",
		"@types/node": "^20.10.2",
		"@types/socket.io": "^3.0.2",
		"prisma": "^5.6.0",
		"ts-node": "^10.9.1",
		"typescript": "^5.3.2"
	},
	"dependencies": {
		"@prisma/client": "^5.6.0",
		"bcrypt": "^5.1.1",
		"colors": "^1.4.0",
		"concurrently": "^8.2.2",
		"copyfiles": "^2.4.1",
		"cors": "^2.8.5",
		"cross-env": "^7.0.3",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"express-validator": "^7.0.1",
		"greenlock-express": "^4.0.3",
		"https": "^1.0.0",
		"jsonwebtoken": "^9.0.2",
		"lodash.merge": "^4.6.2",
		"morgan": "^1.10.0",
		"npm-run-all": "^4.1.5",
		"socket.io": "4.5.1"
	}
}
